<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Perfil.PerfilFragment">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/tvNombreP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombres y Apellidos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rol -->
    <TextView
        android:id="@+id/tvRolP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ROL"
        android:textSize="14sp"
        android:textColor="#555"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvNombreP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progreso y porcentaje -->
    <ProgressBar
        android:id="@+id/pbProgresoP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvRolP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPorcentajeP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porcentaje"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/pbProgresoP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DNI Label + Dato -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documento de Identidad (DNI)"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvPorcentajeP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvDniP"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="#63ACE6"
        android:text="12345678"
        android:textColor="#0C30F8"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Nacimiento Label + Dato -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvDniP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvNacimientoP"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="#63ACE6"
        android:text="01/01/2000"
        android:textColor="#0C30F8"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Celular Label + Dato -->
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Celular"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNacimientoP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvCelularP"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="#63ACE6"
        android:text="999999999"
        android:textColor="#0C30F8"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Correo Label + Dato -->
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electronico"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvCelularP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvCorreoP"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="#63ACE6"
        android:text="correo@correo.com"
        android:textColor="#0C30F8"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Direccion Label + Dato -->
    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvDireccionP"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="#63ACE6"
        android:text="Calle 123, Ciudad"
        android:textColor="#0C30F8"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
